<PROJECT_ROOT>/node_modules/.*webpack.*
<PROJECT_ROOT>/node_modules/esdoc.*
<PROJECT_ROOT>/node_modules/bunyan.*
<PROJECT_ROOT>/node_modules/core-js/.*
